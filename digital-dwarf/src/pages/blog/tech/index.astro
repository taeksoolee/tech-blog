---
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';
import PostByCategory from '../../../layouts/PostByCategory.astro';

const posts = (await getCollection('blog.tech')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PostByCategory
	name="Tech"
	category="tech"
	title={`${SITE_TITLE} - Tech`}
	description={SITE_DESCRIPTION}
	data={posts}
/>