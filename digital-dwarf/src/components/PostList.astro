---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

type Data = 
  | CollectionEntry<"blog.all">
  | CollectionEntry<"blog.life">
  | CollectionEntry<"blog.tech">;

type Props = {
  prefix?: string;
  data: Array<Data>;
};

const { prefix, data } = Astro.props;

const getLink = (id: string) =>
  prefix ? `/blog/${prefix}/${id}/` : `/blog/${id}/`;
---

<ul>
  {
    data.map((post) => (
      <li>
        <a href={getLink(post.id)}>
          <div>
            <h1 class="title">{post.data.title}</h1>
            <p class="date">
              <FormattedDate date={post.data.pubDate} />
            </p>
          </div>
          <img width={720} height={360} src={post.data.heroImage} alt={post.data.title}>
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    width: calc(50% - 1rem);
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li:first-child {
    width: 100%;
    text-align: center;
  }
  ul li:first-child img {
    width: 100%;
  }
  ul li:first-child .title {
    font-size: 1.5rem;
  }
  ul li img {
    border-radius: 12px;
  }
  ul li a {
    display: block;
    position: relative;
  }
  .title {
    margin: 0;
    margin-bottom: 0.2rem;
    color: rgb(var(--white));
  }
  .date {
    margin: 0;
    color: rgb(var(--white));
    font-size: 0.8rem;
  }
  ul li a:hover h1 ,
  ul li a:hover .date {
    transform: translateY(-2px);
    // color: rgb(var(--accent));
  }
  ul a:hover img {
    /* box-shadow: var(--box-shadow); */
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  div {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.2rem;
    }
  }
</style>
